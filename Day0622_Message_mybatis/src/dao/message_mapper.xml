<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.MessageMapper">
	<insert id="insertMessage" parameterType="message">
		INSERT INTO message
		VALUES (message_seq.nextval,#{password},#{name},#{message},#{user_num})
	</insert>
	<update id="updateMessage" parameterType="message">
		UPDATE message
		SET password = #{password}, name = #{name}, message = #{message}
		WHERE id = #{id}
	</update>
	<delete id="deleteMessage" parameterType="int">
		DELETE 
		FROM message
		WHERE id = #{id}
	</delete>
	<select id="selectOne" parameterType="int" resultType="message">
		SELECT *
		FROM message
		WHERE id = #{id}
	</select>
	<select id="selectAll" resultType="message">
		SELECT *
		FROM message
	</select>
</mapper>