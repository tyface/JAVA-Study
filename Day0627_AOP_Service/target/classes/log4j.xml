<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration
	xmlns:log4j='http://jakarta.apache.org/log4j/'>
	<!-- log4j 설정파일 구성 appender : 출력형태 설정(콘솔,file 등) layout : 출력패턴 설정 logger 
		: 출력레벨 설정 -->
	<appender name="console"
		class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d %p [%c{5}] %m [%X{userid}]%n" />
		</layout>
	</appender>


	<!-- 파일출력 , 날짜별로 로그파일 새로 생성 -->
	<appender name="filelog"
		class="org.apache.log4j.DailyRollingFileAppender">
		<!-- <param name="Threshold" value="ERROR"/> -->
		<param name="File" value="c:/LOG/service.log" />
		<param name="Append" value="true" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d %p [%c{5}] %m [%X{userid}]%n" />
		</layout>
	</appender>

	<!-- 에러만 기록 남기는 로그파일 생성하는 appender -->
	<appender name="errfile"
		class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="c:/LOG/error.log" />
		<param name="Append" value="true" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d %p [%c{5}] %m [%X{userid}]%n" />
		</layout>
	</appender>

	<logger name="org.springframework">
		<level value="INFO" />
		<appender-ref ref="errfile" />
	</logger>

	<!-- <logger name="org.mybatis"> -->
	<!-- <level value="INFO"></level> -->
	<!-- </logger> -->

	<!-- <logger name="java.sql"> -->
	<!-- <level value="DEBUG" /> -->
	<!-- </logger> -->

	<logger name="aop">
		<level value="INFO" />
		<appender-ref ref="filelog" />
	</logger>

	<!-- 기본 출력 설정 -->
	<root>
		<level value="INFO" />
		<appender-ref ref="console" />
	</root>

</log4j:configuration>








